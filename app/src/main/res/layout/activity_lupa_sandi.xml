<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LupaSandi"
    android:background="@color/back">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="114dp"
        android:layout_height="161dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logoo" />


    <LinearLayout
        android:id="@+id/lay"
        android:layout_marginTop="30dp"
        android:layout_width="312dp"
        android:layout_height="200dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:background="@color/bachighlight"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan No Hp Untuk Reset Password :"/>

        <EditText

            android:id="@+id/nope"
            android:layout_width="238dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
          android:layout_marginTop="20dp"
            android:background="#8FFFFFFF"
            android:hint="  No Hp"
            android:textColorHint="#99000000"
            android:textStyle="bold"
            android:inputType="number"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_phone_iphone_black_24dp">
            <requestFocus/>
        </EditText>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText

                android:id="@+id/otp"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
               android:layout_marginLeft="37dp"
                android:background="#8FFFFFFF"
                android:hint="     OTP"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="#99000000"
                android:textStyle="bold"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Kirim Kode"/>

        </LinearLayout>

    </LinearLayout>




        <Button
            android:id="@+id/verif"
            android:layout_below="@id/lay"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Verifikasi" />



</RelativeLayout>